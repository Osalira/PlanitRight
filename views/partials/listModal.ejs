<div
  class="modal fade"
  id="exampleModal<%= uniID %>"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog custom-modal">
    <div class="modal-content ">
      <div class="modal-header headerC">
        <h1 class="modal-title fs-5" id="exampleModal<%= uniID %>Label">
          <%= fileD.listTitle %>
        </h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>

      <div class="modal-body">
        <% if (typeof fileD.listOfTasks !== 'undefined' &&
        fileD.listOfTasks.length > 0) { %>
        <ul class="list-group">
          <% fileD.listOfTasks.forEach(function(list) { %>
          <li class="list-group-item">
            <div class="form-check">
              <input
                class="form-check-input"
                type="checkbox"
                name=""
                value=""
              />
              <label class="form-check-label" id="title-<%= list._id %>"> <%= list.taskTitle %> </label>
            </div>
            <div class="d-flex justify-content-between align-items-center">
              <!-- Flex container -->
              <p class="text-muted" id="task-<%= list._id %>"><%= list.taskDescription %></p>
              <form action="/editTaskModal/<%= list._id %>" method="get">
              <button
                class="btn btn-link editButton"
                name="editListElement"
                type="button"
                id="dropdownMenuButton<%= list._id %>"
                data-listid="<%= list._id %>"
                data-taskid="<%= list.taskID %>"
                value="<%= list.taskID %>"
                data-original-title="Edit Task"
                aria-haspopup="true"
                aria-expanded="false"
                onclick="editTask('<%= list._id %>', '<%= list.taskTitle %>', '<%= list.taskDescription %>')"

              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  fill="currentColor"
                  class="bi bi-pencil"
                  viewBox="0 0 16 16"
                >
                  <!-- Path for the pencil icon -->
                  <path
                    d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"
                  />
                </svg>
              </button>
            </form>
            </div>
          </li>
          <% }); %>
        </ul>
        <% } else { %>
        <p>No tasks available.</p>
        <% } %>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Close
        </button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
  crossorigin="anonymous"
></script>

<script>

//here is the java for editing the task and putting the cursur ready to edit
function editTask(taskId, taskTitle, taskDescription) {
    const titleElement = document.getElementById(`title-${taskId}`);
    const descriptionElement = document.getElementById(`task-${taskId}`);

    titleElement.innerHTML = `<input type="text" id="editTitle-${taskId}" value="${taskTitle.replace(/"/g, '&quot;')}">`;
    descriptionElement.innerHTML = `<textarea id="editDesc-${taskId}">${taskDescription}</textarea>
                                    <button onclick="saveTask('${taskId}')">Save</button>`;

    document.getElementById(`editTitle-${taskId}`).focus();
}

</script>

