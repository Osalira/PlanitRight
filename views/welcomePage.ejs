<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script
      src="https://kit.fontawesome.com/14453b62cd.js"
      crossorigin="anonymous"
    ></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>

    
    <link rel="stylesheet" href="/styles/welcomePage.css" />
    <link rel="stylesheet" href="/styles/styles.css" />
    

    <title>Angel Net</title>
  </head>
  <body>
   
    <!-- from the welcome page, if the user enters wrong password of username-->
    <% if (messages.error && messages.error.length > 0) { %>
      <div class="alert alert-danger flash-message" id="flashMessage">
        <% messages.error.forEach(function(message) { %>
          <p><%= message %></p>
        <% }); %>
      </div>
    <% } %>
        
    <div class="firstPcontainer">
      <div class="logoContainer">
        <div class="logoI">
          <img src="/images/logo.png" alt="logo" />
        </div>
        <div class="textC">
          <p>
            "Connecting Dreams with Discipline: Angel Net's Commitment to
            Excellence"
          </p>
        </div>
      </div>
      <div class="buttonContainer">
        <!-- Button trigger modal -->
        <button
          type="button"
          class="btn btn-primary"
          data-bs-toggle="modal"
          data-bs-target="#staticBackdrop"
        >
          Login
        </button>
        <!-- Button trigger modal -->
        <button
          type="button"
          class="btn btn-primary"
          data-bs-toggle="modal"
          data-bs-target="#staticBackdropSignUp"
        >
          Sign Up
        </button>
        <div><%- include("./partials/login.ejs") %></div>
        <div><%- include("./partials/register.ejs") %></div>
      </div>
    </div>

    <%- include("./partials/footer.ejs") %>
    <script>
      window.onload = function() {
        var flashMessage = document.getElementById('flashMessage');
        if (flashMessage) {
          setTimeout(function() {
            fadeOutEffect(flashMessage);
          }, 6000); // 5000 milliseconds = 5 seconds
        }
      };
    
      function fadeOutEffect(fadeTarget) {
        var fadeEffect = setInterval(function () {
          if (!fadeTarget.style.opacity) {
            fadeTarget.style.opacity = 1;
          }
          if (fadeTarget.style.opacity > 0) {
            fadeTarget.style.opacity -= 0.1;
          } else {
            clearInterval(fadeEffect);
            fadeTarget.style.display = 'none';
          }
        }, 100);
      }
    </script>    
  </body>
</html>
