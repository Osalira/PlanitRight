<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script
      src="https://kit.fontawesome.com/14453b62cd.js"
      crossorigin="anonymous"
    ></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/styles/styles.css" />
    <link rel="stylesheet" href="/styles/welcomePage.css" />

    <title>Angel Net</title>
  </head>
  <body>
    <div class="firstPcontainer">
      <div class="logoContainer">
        <div class="logoI">
          <img src="/images/logo.png" alt="logo" />
        </div>
        <div class="textC">
          <p>
            "Connecting Dreams with Discipline: Angel Net's Commitment to
            Excellence"
          </p>
        </div>
      </div>
      <div class="buttonContainer">
        <!-- Button trigger modal -->
        <button
          type="button"
          class="btn btn-primary"
          data-bs-toggle="modal"
          data-bs-target="#staticBackdrop"
        >
          Login
        </button>
        <!-- Button trigger modal -->
        <button
          type="button"
          class="btn btn-primary"
          data-bs-toggle="modal"
          data-bs-target="#staticBackdropSignUp"
        >
          Sign Up
        </button>
        <div><%- include("./partials/login.ejs") %></div>
        <div><%- include("./partials/register.ejs") %></div>
      </div>
    </div>

    <%- include("./partials/footer.ejs") %>
  </body>
</html>
